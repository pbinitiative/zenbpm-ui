# ===========================================
# Base Configuration (loaded for ALL modes)
# ===========================================
# Mode-specific files (.env.mocks, .env.live, etc.) override these values

# Backend API base URL
VITE_API_BASE_URL=http://localhost:8080/v1

# Default API strategy (overridden by mode-specific files)
VITE_API_STRATEGY=mocks

# Default mock delay (can be: 0, number in ms, or 'real')
VITE_MOCK_DELAY=real

# API response validation against OpenAPI schema (disabled by default for production)
VITE_API_VALIDATION=false
